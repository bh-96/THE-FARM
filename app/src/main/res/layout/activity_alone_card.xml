<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F5D3"
    tools:context=".Alone_card">


    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="READY"
            android:textSize="31sp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout5"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:background="#AAE5E5E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_exit">

        <ImageButton
            android:id="@+id/btn01"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_row="0" />

        <ImageButton
            android:id="@+id/btn02"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_row="0" />

        <ImageButton
            android:id="@+id/btn03"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_row="0" />

        <ImageButton
            android:id="@+id/btn04"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="3"
            android:layout_row="0" />

        <ImageButton
            android:id="@+id/btn05"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_row="1" />

        <ImageButton
            android:id="@+id/btn06"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_row="1" />

        <ImageButton
            android:id="@+id/btn07"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_row="1" />

        <ImageButton
            android:id="@+id/btn08"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="3"
            android:layout_row="1" />

        <ImageButton
            android:id="@+id/btn09"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_row="2" />

        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_row="2" />

        <ImageButton
            android:id="@+id/btn11"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_row="2" />

        <ImageButton
            android:id="@+id/btn12"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="3"
            android:layout_row="2" />

        <ImageButton
            android:id="@+id/btn13"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="0"
            android:layout_row="3" />

        <ImageButton
            android:id="@+id/btn14"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="1"
            android:layout_row="3" />

        <ImageButton
            android:id="@+id/btn15"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="2"
            android:layout_row="3" />

        <ImageButton
            android:id="@+id/btn16"
            android:layout_width="82dp"
            android:layout_height="97dp"
            android:layout_column="3"
            android:layout_row="3" />


    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout6"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout4"
        tools:ignore="RtlCompat">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Start"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="9dp" />
    </GridLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginBottom="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>